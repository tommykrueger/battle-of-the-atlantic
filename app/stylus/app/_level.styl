.level

  width: 100%
  height: 200px
  margin-top: -100px
  display: table
  position: absolute
  left: 0
  top: 50%

  border-top: 1px solid darken($colors.white, 90%)
  border-bottom: 1px solid darken($colors.white, 90%)

  background: alpha($colors.black, 0.92)

  &:before
  &:after
    content: ''
    width: 100%
    height: 6px
    position: absolute
    left: 0

  &:before
    top: 0
    background: linear-gradient(top, #787878, #101010)

  &:after
    bottom: 0
    background: linear-gradient(bottom, #787878, #101010)


  &-content
    display: table-cell
    vertical-align: middle


  &-title
  &-subtitle
    margin: 10px auto
    display: block
    text-align: center
    text-transform: uppercase


  &-title
    color: $colors.white
    font-size: 48px
    font-weight: bold
    letter-spacing: 3px

  &-subtitle
    color: darken($colors.white, 25%)
    font-family: 'Proxima Nova'
    font-size: 24px
    letter-spacing: 0px
    animation: letterSpacing 10000ms infinite
