.levelloader

  width: 100%
  height: 100%
  display: table
  position: absolute
  left: 0
  top: 0

  border-top: 1px solid darken($colors.white, 90%)
  border-bottom: 1px solid darken($colors.white, 90%)
  background: url(../img/space_bg.jpg)
  background-repeat: no-repeat
  background-size: 100%



  &-content
    display: table-cell
    text-align: center
    vertical-align: middle


  &-progresstitle
  &-text-left
  &-text-right
    color: $colors.white
    font-size: 18px
    font-family: 'Proxima Nova'
    text-transform: uppercase
    position: relative
    z-index: 2

  &-progresstitle
    display: block
    margin: 0 0 20px 0

  &-text-left
  &-text-right
    font-size: 12px
    text-align: left
    letter-spacing: 2px
    position: absolute
    left: 2px
    bottom: 0px

  &-text-right
    left: auto
    right: 0


  &-progressbar-wrapper
    width: 360px
    max-width: 100%
    display: block
    margin: 0 auto
    position: relative


  &-progressbar-bg
    width: 100%
    height: 14px
    position: relative
    left: 2px
    top: 2px
    background-color: $colors.black
    border-left: 2px solid $colors.blue
    border-right: 2px solid $colors.blue

  &-progressbar
    width: 0%
    height: 14px
    display: block
    margin-left: 2px
    position: relative
    left: 0%
    top: -12px
    background-color: $colors.blue
    box-shadow: 0 0 30px lighten($colors.blue, 50%)




  &-progressdot
    width: 18px
    height 18px
    display: block
    margin-left: -8px
    position: relative
    left: 10%
    top: -28px
    border-radius: 50%
    background-color: $colors.white
    border: 2px solid $colors.blue

    &:before
    &:after
      content: ''
      width: 100px
      height: 100px
      left: 0
      top: 0
      margin-top: -44px
      margin-left: -44px
      position: absolute
      z-index: 1
      border-radius: 50%
      background-color: alpha($colors.blue, 10%)

    &:after
      width: 46px
      height: 46px
      margin-top: -16px
      margin-left: -16px



.start-btn
  width: 180px
  margin: 20px 0
  padding: 6px 12px
  color: $colors.white
  font-family: 'Proxima Nova'
  cursor: pointer
  text-transform: uppercase
  background-color: $colors.orange
  visibility: hidden

  & > span
    display: block

  &:hover
    & > span
      animation: scaleX 5000ms infinite
