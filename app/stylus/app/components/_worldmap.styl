

.worldmap

  width: 100%
  max-width: 600px
  height: 600px
  margin: 250px auto 0 auto
  position: relative


  .level
    display: block
    position: absolute
    border: 1px solid #f9f9f9
    background-color: $colors.red

    a
      width: 100%
      height: 100%
      display: block

      &:hover
        border: 1px solid darken($colors.red, 20%)
        background-color: alpha($colors.red, 10%)
