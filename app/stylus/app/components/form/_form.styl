.form

  display: block

  .input
    margin: 0 0 20px 0
    display: block

  input[type=text]
  input[type=tel]
  input[type=password]
  input[type=email]

    @extends $input
    -webkit-appearance: none

    &:active
    &:focus
      outline: 0


  button
    padding: 8px 12px
    color: $colors.white
    font-size: 18px
    cursor: pointer
    border: 0
    background-color: $colors.red
    transition: background-color 150ms ease-in-out

    &:hover
      background-color: darken($colors.red, 15%)




  &-login
    margin: 0 50px
    padding: 50px
    background-color: alpha($colors.blue, 50%)

    input
      background: darken(#bbbfae, 20%)
      border: 1px solid #bbbfae
      border-radius: 2px

    p
      color: $colors.white
