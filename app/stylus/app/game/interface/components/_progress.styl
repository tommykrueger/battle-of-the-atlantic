.progress
  width: 170px
  height: 10px
  display: block
  margin: 0
  left: 5px
  bottom: 5px
  position: absolute
  background-color: #3c3a3a
  border: 1px solid #6d8389

  &-bar
    width: 30%
    height: 8px
    display: block
    position: absolute
    left: 0
    top: 0
    border: 1px solid $colors.black
    background-color: $colors.green
    background-image: linear-gradient(top,
      lighten($colors.green, 50%) 10%,
      $colors.green 30%,
      darken($colors.green, 10%) 100%
    )

  &-percent
    color: #a9a9a9
    position: relative
    top: 4px
    left: 4px



  // sub components

  &-production
    width: 100%
    height: 100%
    top: 0
    left: 0
    bottom: 0
    z-index: 1
    border: 0
    background-color: transparent

    .progress-bar
      height: 100%
      border: 0
      opacity: 0.28
