.cursor

  display: block
  z-index: 10
  position: absolute
  left: 300px
  top: 160px

  border-radius: 50%
  border: 8px solid rgba(255, 255, 255, .25)


  &-operation-area
    width: 128px
    height: 128px

    &:before
      width: 98px
      height: 98px
      margin: 8px 0 0 8px
      content: ''
      position: absolute
      left: 0
      top: 0
      border-radius: 50%
      //border: 10px solid #fff

      background-size: 22px 22px
      background-image: linear-gradient(135deg, rgba(255, 255, 255, .25) 25%, transparent 25%,
        transparent 50%, rgba(255, 255, 255, .25) 50%, rgba(255, 255, 255, .25) 75%,
        transparent 75%, transparent)
