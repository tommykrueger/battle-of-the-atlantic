.event
  @extends $textStyle
  width: 720px
  height: 80%
  margin: 0 0 0 -360px
  padding: 0
  display: block
  z-index: 100
  position: absolute
  left: 50%
  top: 10%
  border: 1px solid darken(#cabfaf, 30%)
  border-radius: 3px
  overflow-x: hidden
  overflow-y: auto
  background: alpha(#cabfaf, 0.90)
  background-image: url(../img/interface/paper-bg.jpg)


  &-header
    margin: 20px 20px 0 20px
    padding: 10px 10px 5px 10px
    position: relative
    border: 1px solid alpha(#333, 0.4)

    &:before
      content: ''
      width: 100%
      display: block
      position: absolute
      top: 4px
      left: 0
      border-top: 1px solid alpha(#333, 0.4)

  &-date
    float: right

  &-overline
    font-style: italic
    text-transform: uppercase


  &-content
    @extends $textStyle
    padding: 20px

  &-image
    max-height: 160px
    overflow: hidden

    img
      width: 100%
      height: auto
      display: block

  &-title
    display: block
    margin: 0 0 20px 0
    font-size: 32px
    font-weight: bold
    letter-spacing: 2px
    text-transform: uppercase

  &-text
    display: block
    margin: 0 0 50px 0
    column-count: 3
    column-gap: 32px
    column-rule: 1px dotted alpha(#333, 0.25)

    p
      margin: 0 0 10px 0


  &-actions
    display: block

  .button
    width: 100%
    display: block
    margin: 0 0 5px 0
    color: $colors.white
    transition: background 150ms ease-in-out
    background: darken(#cabfaf, 25%)
    border-radius: 255px 15px 225px 15px/15px 225px 15px 255px
    box-shadow: 0px 8px 4px -4px rgba(0,0,0,0.2)

    &:hover
      background: #cabfaf
