.modal

  width: 100%
  height: 100%
  display: none
  margin-top: 32px
  position: absolute
  z-index: 100
  left: 0
  top: 0
  text-align: center
  overflow: hidden
  background: alpha(#cabfaf, 0.82)
  background-image: url(../img/interface/paper-bg.jpg)

  &:before
    width: 100%
    height: 100%
    content: ''
    z-index: 1
    position: absolute
    top: 0
    left: 0
    background-color alpha(#000, 0.72)

  &:after
    bottom: 0
    background: linear-gradient(bottom, #787878, #101010)


  &-header
  &-content
    padding: 6px 20px
    position: relative
    z-index: 2


  &-header
    background: #333333
    text-align: left
    border-bottom: 1px solid lighten($colors.black, 30%)


  &-content
    display: block
    text-align: left


  &-button
    width: 32px
    height: 32px
    padding: 0 10px
    color: #fff
    float: right
    font-size: 24px
    line-height: 32px
    text-align: center
    cursor: pointer
    background-color: #ec5532
    transition: background-color 150ms ease-in-out

    &:hover
      background-color: lighten(#ec5532, 20%)

  &-button-close
    position: absolute
    right: 0
    top: 0


  &-title
    color: $colors.white
    font-size: 16px
    font-weight: bold
    letter-spacing: 3px
    text-transform: uppercase

  &-text
    color: $colors.white
    font-family: 'Proxima Nova'
    font-size: 24px

    span
      margin: 0 20px 0 0
      display: inline-block
      color: $colors.red
      font-weight: bold








.restart-btn
  width: 180px
  margin: 20px auto
  padding: 6px 12px
  display: block
  color: $colors.white
  font-family: 'Proxima Nova'
  cursor: pointer
  text-align: center
  text-transform: uppercase
  background-color: $colors.orange

  & > span
    display: block

  &:hover
    & > span
      animation: scaleX 5000ms infinite
