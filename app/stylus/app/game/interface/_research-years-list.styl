.research-years-list

  width: 100%
  display: block

  li
    clearfix()
    width: 100%
    height: 72px
    display: block
    padding: 10px 0
    position: relative
    background-color: alpha($colors.black, 0.1)

    &:nth-child(2n+1)
      background-color: alpha($colors.black, 0.2)

  .year
    height: 20px
    margin-top: -10px
    display: block
    left: 10px
    top: 50%
    position: absolute
    color: alpha($colors.white, 80%)
    text-shadow: #000 0 0px 2px
    font-size: 12px
    font-weight: bold
    text-align: center


  .tech-group-1
    position: absolute
    left: 48px
  .tech-group-2
    position: absolute
    left: 298px
  .tech-group-3
    position: absolute
    left: 448px
  .tech-group-4
    position: absolute
    left: 608px
