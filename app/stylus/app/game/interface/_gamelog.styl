.gamelog
  // @extends $textStyle
  width: 100%
  height: 100px
  padding: 10px
  display: block
  color: $colors.white
  z-index: 10
  position: absolute
  left: 0
  bottom: 0
  background-color: alpha(#333, 0.8)
  border-right: 1px solid darken($colors.white, 15%)
  border-bottom: 1px solid darken($colors.white, 15%)
  box-shadow: alpha($colors.black, 0.5) 0 0 4px

  &-content
    max-height: 100%
    padding: 5px
    display: block
    background-color: #333
    border-top: 1px solid #000
    border-left: 1px solid #000
    border-bottom: 1px solid #999
    border-right: 1px solid #999
    overflow-y: auto


  &-list
    li
      display: block
      font-size: 9px

  &-date
    font-weight: bold
    display: inline-block

  &-text
    text-align: left
