.victory-progress
  width: 70%
  height: 18px
  display: block
  margin: 6px auto
  position: relative
  border: 1px solid $colors.black

  &-bar
  &-bar-win
    width: 100%
    height: 16px
    z-index: 1
    position: absolute
    left: 0
    top: 0
    background-color: $colors.red

  &-bar-win
    width: 20%
    z-index: 2
    background-color: $colors.green
