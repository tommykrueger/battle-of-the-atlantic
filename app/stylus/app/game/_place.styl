.place
  width: 16px
  height: 16px
  margin: -8px 0 0 -8px
  display: block
  position: absolute
  left: 0
  top: 0
  text-align: center
  cursor: pointer
  border-radius: 50%
  border: 1px solid #606060
  box-shadow: #333 0 0 2px
  background-color: #f0f0f0
  transform-origin: center center

  &-has-units
    background-color: #ecd7d7

  &-type-harbor
    &:before
      content: ''
      width: 12px
      height: 12px
      position: absolute
      left: 1px
      top: 0
      background-image: url(../img/icons/anchor.png)
      background-size: 100%

  &:hover
    background-color: #c05040

  .place-name
    margin-left: 16px
    display: block
    color: #fff
    font-size: 9px
    line-height: 14px
    white-space: nowrap
    text-shadow: #555 0 0 2px
