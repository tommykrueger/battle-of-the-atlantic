.place
  width: 10px
  height: 10px
  margin: -5px 0 0 -5px
  display: block
  position: absolute
  left: 0
  top: 0
  text-align: center
  cursor: pointer
  border-radius: 50%
  border: 1px solid #fff
  box-shadow: #333 0 0 2px
  background-color: #999
  transform-origin: center center

  &:hover
    background-color: #c05040

  .place-name
    margin-left: 10px
    display: block
    color: #fff
    font-size: 9px
    line-height: 9px
    white-space: nowrap
    text-shadow: #555 0 0 2px
