
.stage
  width: 100%
  height: 100%
  display: block
  position: absolute
  top: 0
  left: 0

#map
  position: absolute
  left: 0
  top: 0

.sea
  fill: #f0f0f0
  pointer-events: none


.land
  fill: #a0a0a0
  stroke: #909090
  stroke-width: 1.25px

.country
  fill: #f7f5e2
  stroke: #d6d1a8

  &:hover
    fill: #f0f0f0

.ship
  fill: alpha(#502948, 15%)
  stroke-width: 1px


.graticule
  fill: none
  stroke: #505050
  stroke-width: .1px

  &:nth-child(2n)
    stroke-dasharray: 2,2



// for testing
.fleet-path
  fill: none
  stroke: #ff0000
  stroke-width: 2px

.route-path
  fill: none
  stroke: steelblue
  stroke-width: 1px
  stroke-dasharray: 3px

.line2
  fill: none
  stroke: steelblue
  stroke-width: 20px



.node
  fill: none
  //fill: steelblue

  &.active
    fill: red

  &.ignored
    fill: black

.path
  fill: none
  //stroke: steelblue
  stroke: none
  opacity: 0.5
