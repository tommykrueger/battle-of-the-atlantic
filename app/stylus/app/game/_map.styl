
.stage
  width: 100%
  height: 100%
  display: block
  position: absolute
  top: 0
  left: 0

#map
  position: absolute
  left: 0
  top: 0

.sea
  fill: #f9f9f9
  pointer-events: none


.land
  fill: #e9e9e9
  stroke: #e0e0e0
  stroke-width: 1.25px

.country
  fill: none
  stroke: #000

  &:hover
    fill: #f0f0f0

.ship
  fill: alpha(#502948, 15%)
  stroke-width: 1px


.graticule
  fill: none
  stroke: #909090
  stroke-width: .1px

  &:nth-child(2n)
    stroke-dasharray: 2,2



// for testing
.fleet-path
  fill: none
  stroke: #ff0000
  stroke-width: 5px

.route-path
  fill: none
  stroke: steelblue
  stroke-width: 2px

.line2
  fill: none
  stroke: steelblue
  stroke-width: 20px
